<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        {% block body %}
            <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 bg-white border-bottom box-shadow">
                <h5 class="my-0 mr-md-auto font-weight-normal"><a href="/" style="color: black; text-decoration: none;">La Casserai</a></h5>
                <nav class="my-2 my-md-0 mr-md-3">
                    <a class="p-2 text-dark" href="/">Home</a>
                    <a class="p-2 text-dark" href="/view">Book</a>
                </nav>
                {% if(is_granted("ROLE_ADMIN")) %}
                    <fieldset style="border: 1px solid lightgray">
                    <a class="p-2 text-dark" href="/bookview">Check-in/out</a>
                    <a class="p-2 text-dark" href="/room">Rooms</a>
                    <a class="p-2 text-dark" href="/user">Users</a>
                    </fieldset>&nbsp
                {% endif %}
                {% if(is_granted("ROLE_USER")) %}
                    <a class="nav-link" href="{{ path("ownBook") }}">My Bookings</a>
                    <a class="btn btn-outline-primary" href="/logout">Logout</a>
                {% else %}
                    <a class="btn btn-outline-secondary" href="/login">Login</a>
                    &nbsp
                    <a class="btn btn-outline-primary" href="/register">Sign up</a>
                {% endif %}
            </div>
        {% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
