{% include 'base.html.twig' %}

{% block body %}

<div class="container">
    <div class="row">
        <!-- Blog Entries Column -->
        <div class="col-md-8">
            <h1 class="my-4">All rooms</h1>
    {% for room in room %}
            <!-- Blog Post -->
            <div class="card mb-4">
                <img class="card-img-top" src="{{ vich_uploader_asset(room, 'imageFile') }}" alt="RoomImage">
                <div class="card-body">
                    <h2 class="card-title">{{ room.room_name }}</h2>
                    <p class="card-text">{{ room.room_description }}</p>
                    <a href="/booking/{{ room.id }}" class="btn btn-primary">Book</a>
                </div>
                <div class="card-footer text-muted">
                    Persons: {{ room.room_person_amount }}
                </div>
            </div>
    {% endfor %}
        </div>

        <!-- Sidebar Widgets Column -->
        <div class="col-md-4">

            <!-- Search Widget -->
            <div class="card my-4">
                <h5 class="card-header">Search</h5>
                <div class="card-body">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                <button class="btn btn-secondary" type="button">Go!</button>
              </span>
                    </div>
                </div>
            </div>

            <!-- Categories Widget -->
            <div class="card my-4">
                <h5 class="card-header">Categories</h5>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <ul class="list-unstyled mb-0">
                                <li>
                                    <a href="#">Web Design</a>
                                </li>
                                <li>
                                    <a href="#">HTML</a>
                                </li>
                                <li>
                                    <a href="#">Freebies</a>
                                </li>
                            </ul>
                        </div>
                        <div class="col-lg-6">
                            <ul class="list-unstyled mb-0">
                                <li>
                                    <a href="#">JavaScript</a>
                                </li>
                                <li>
                                    <a href="#">CSS</a>
                                </li>
                                <li>
                                    <a href="#">Tutorials</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Side Widget -->
            <div class="card my-4">
                <h5 class="card-header">Side Widget</h5>
                <div class="card-body">

                </div>
            </div>

        </div>

    </div>
</div>

{% endblock %}
