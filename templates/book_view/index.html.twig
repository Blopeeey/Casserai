{% include 'base.html.twig' %}
<style>
    [class*="col-"] {
        padding-top: 1rem;
        padding-bottom: 1rem;
        background-color: rgba(224, 224, 235, .15);
        border: 1px solid rgba(86, 61, 124, .2);
        text-align: center;
    }
</style>

{% block body %}
    </br>
    <h3>Check-in</h3>
    <div class="row">
        <div class="col-4">Room ID</div>
        <div class="col-4">Username</div>
        <div class="col-4">Date</div>
    </div>
{% for booking in booking %}
    {% if booking.user == NULL %}
        There is no check-ins today
    {% else %}
        <div class="row">
            <div class="col-4">{{ booking.id }}</div>
            <div class="col-4">{{ booking.user }}</div>
            <div class="col-4">{{ booking.start_time ? booking.start_time|date('d-m-Y') : '' }}</div>
        </div>
    {% endif %}
{% endfor %}
    <br/>
    <h3>Check-out</h3>
    <div class="row">
        <div class="col-4">Room ID</div>
        <div class="col-4">Username</div>
        <div class="col-4">Date</div>
    </div>
{% for endtime in endtime %}
    {% if endtime == NULL %}
        There is no check-out today
    {% else %}
        <div class="row">
            <div class="col-4">{{ endtime.id }}</div>
            <div class="col-4">{{ endtime.user }}</div>
            <div class="col-4">{{ endtime.end_time ? endtime.end_time|date('d-m-Y') : '' }}</div>
        </div>
    {% endif %}
{% endfor %}

{% endblock %}
